{% extends 'TKUserManagerBundle::base.html.twig' %}

{% block content -%}

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >

    <div class="panel panel-info">

      <div class="panel-heading profile">
        <div class="row">
          <div class="col-md-6">
            <h3 class="panel-title">{{ entity.firstName }} {{ entity.lastName }}</h3>
          </div>
          <div class="col-md-6 text-right">
            <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">
              <span class="glyphicon glyphicon-pencil"> Edit</span>
            </a>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row">

          <div class="col-md-3 col-lg-3 " align="center">
            <img alt="User Pic" src="/bundles/tkusermanager/images/user_default.png" class="img-circle">
          </div>

          <div class=" col-md-9 col-lg-9 "> 
            <table class="table table-user-information">
            <tbody>
              <tr>
              <td>Id:</td>
              <td>{{ entity.id }}</td>
              </tr>
              <tr>
              <td>Age:</td>
              <td>{{ entity.age }}</td>
              </tr>
              <tr>
              <td>Email:</td>
              <td>{{ entity.email }}</td>
              </tr>
              <tr>
              <td>UserRole:</td>
              <td>{{ entity.userRole.getName }}</td>
              </tr>
              <tr>
              <td>Created at:</td>
              <td>{{ entity.getCreatedAt }}</td>
              </tr>
              <tr>
              <td>Updated at:</td>
              <td>{{ entity.updatedAt }}</td>
              </tr>

             
            </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <hr>
            <h4>User Addresses: </h4>
            <div class="table-responsive">
              <table class="table table-bordred table-striped addresses">
                <thead>
                  <tr>
                  <th>Zip</th>
                  <th>City</th>
                  <th>Address</th>
                  </tr>
                </thead>
                <tbody>
                  {% for userAddress in entity.getUserAddresses %}
                  <tr>
                  <td>{{ userAddress.zip }}</td>
                  <td>{{ userAddress.city }}</td>
                  <td>{{ userAddress.address }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>

    
      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-md-12 text-right">
            {{ form_start(delete_form) }}
            {{ form_row(delete_form.submit, {'attr': {'class': 'btn btn-danger btn-sm delete'}}) }}
            {{ form_end(delete_form) }}
          </div>
        </div>
        
      </div>
  </div>
  </div>
</div>

  <div class="row text-center">
    <a href="{{ path('user') }}">
      Back to the list
    </a>
  </div>
</div>

{% endblock %}
